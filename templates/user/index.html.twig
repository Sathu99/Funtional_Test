{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div style="background-color: lightgreen;color: #111111;font-size: xxx-large;text-align: center">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div style="background-color: darkred;color: #111111;font-size: xxx-large;text-align: center">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('info') %}
        <div style="background-color: #64a6e1;color: #111111;font-size: xxx-large;text-align: center">
            {{ message }}
        </div>
    {% endfor %}
    <div class="mainBody">
        <div class="container" id="container">
            <div class=" form-container sign-up-container">
                <h1>Create Account</h1>
                <span>Create an account for free </span>
                {{ form(form_signup) }}
            </div>
            <div class="form-container sign-in-container">
                <h1>Sign In</h1>
                <span>Already have account ? </span>
                {{ form(form_login) }}
            </div>
            <div class="overlay-container">
                <div class="overlay">
                    <div class="overlay-panel overlay-left">
                        <h1>Welcome Back</h1>
                        <p> If you already have account please Log In to keep connected with us</p>
                        <button class="ghost" id="signIn">Sign In</button>
                    </div>
                    <div class="overlay-panel overlay-right">
                        <h1>Hello User</h1>
                        <p>Don't You have an account ? Please sign up with your personal details to connect with us ! </p>
                        <button class="ghost" id="signUp">Sign Up</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
